<div class="product-layout col-lg-3 col-md-3 col-sm-6 col-xs-12">
    {% for product in products_main %}
        {{ product }}
    {% endfor %}
    <div class="product-thumb transition">
        <div class="image"><a href="http://localhost:8081/index.php?route=product/product&amp;product_id=43"><img src="http://localhost:8081/image/cache/catalog/demo/macbook_1-200x200.jpg" alt="MacBook" title="MacBook" class="img-responsive"></a></div>
        <div class="caption">
            <h4><a href="http://localhost:8081/index.php?route=product/product&amp;product_id=43">MacBook</a></h4>
            <p>

                Intel Core 2 Duo processor

                Powered by an Intel Core 2 Duo processor at speeds up to 2.1..</p>
            <p class="price">
                $602.00
                <span class="price-tax">Ex Tax: $500.00</span>
